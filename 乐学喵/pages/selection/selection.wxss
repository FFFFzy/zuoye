/* pages/selection/selection.wxss */
.box {
  /* padding: 0 20rpx; */
  height: 100vh;
  background-color: #eee;
}
.swiper{
  padding: 0 20rpx;
}
.header {
  padding: 0 15rpx;
  display: flex;
  justify-content: space-between;
  font-weight: 700;
  color: #424963;
  background-color: #fff;
}
.pic {
  width: 140rpx;
  height: 50rpx;
  /* margin-right: 300rpx; */
  display: flex;
}

.pic .img {
  width: 100%;
  height: 100%;
}
.pic .img1 {
  width: 100%;
  height: 100%;
  margin-left: 40rpx;
}

.nav {
  padding: 0 15rpx;
  height: 90rpx;
  width: 100%;
  display: flex;
  justify-content: space-between;
  /* align-items: center; */
  color: #7a7a7a;
  background-color: #fff;
}

.nav text {
  width: 100rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
}

.active {
  color: #f15a24;
  border-bottom: 3px solid #f15a24;
}

.contentnav{
  width: 100%;
  display: flex;
  height: 120rpx;
  background-color: #fff;
  border-radius: 60rpx;
  margin-top: 30rpx;
}
.contentnav .img1{
  width: 100rpx;
  height: 100rpx;
}
.contentnav .img2{
  width: 200rpx;
  height: 100rpx;
}